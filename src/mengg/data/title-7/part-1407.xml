    <head>
      DEBARMENT AND SUSPENSION
    </head>
    <text>
      <AUTH>
        <HD SOURCE='HED'>
          Authority:
        </HD>
        <P>
          <aref type='USC'>
            <subref title='15' sect='714b' note='' psec='' tq='N' target='http://www.law.cornell.edu/uscode/15/714b.html'>
              15 U.S.C. 714b
            </subref>
